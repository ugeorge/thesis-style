\setbeamercolor{normal}{fg=DarkGray}
\setbeamercolor{title}{fg=kthcolor}
\setbeamercolor{frametitle}{fg=kthcolor}
\setbeamercolor{structure}{fg=kthcolor}
\setbeamercolor{normal text}{fg=DarkGray,bg=white}
\setbeamercolor{section number projected}{bg=kthcolor,fg=white}
\setbeamercolor{itemize item}{fg=darkred}
\setbeamercolor{itemize subitem}{fg=TextGreen}
