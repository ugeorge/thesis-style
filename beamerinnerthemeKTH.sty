% Title page
\defbeamertemplate*{title page}{KTH}[1][]
{
  \begin{textblock*}{.98\paperwidth}[0,.5](0cm,5mm)
    \begin{beamercolorbox}[wd=.98\paperwidth,#1]{title page header}
      \usebeamerfont{title}\usebeamercolor{title}\inserttitle%
    \end{beamercolorbox}%
    \ifx\insertsubtitle\@empty\else%
    \begin{beamercolorbox}[wd=.98\paperwidth,#1]{subtitle page header}
      \usebeamerfont{subtitle}\usebeamercolor{subtitle}\insertsubtitle%
    \end{beamercolorbox}%
    \fi
    \ifx\insertauthor\@empty\else%
    \vspace{.08\paperheight}
    \begin{beamercolorbox}[wd=.98\paperwidth,#1]{author}
      \usebeamerfont{author}\insertauthor%
    \end{beamercolorbox}
    \fi
    \ifx\insertinstitute\@empty\else%
    \vspace{.08\paperheight}
    \begin{beamercolorbox}[wd=.98\paperwidth,#1]{institute}
      \usebeamerfont{institute}\insertinstitute%
    \end{beamercolorbox}
    \fi
  \end{textblock*}
  \begin{textblock*}{9cm}(0cm,.545\paperheight)
    \begin{beamercolorbox}{date}
      \usebeamerfont{date}\insertdate%
    \end{beamercolorbox}
  \end{textblock*}
}


